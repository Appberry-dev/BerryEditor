{
  "name": "berryeditor-workspace",
  "private": true,
  "version": "3.0.0",
  "description": "BerryEditor monorepo",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.6.4",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "pnpm --filter docs dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "docs:generate": "node scripts/generate-docs-api.mjs",
    "docs:check": "node scripts/generate-docs-api.mjs --check",
    "docs:build": "pnpm --filter docs build",
    "docs:ci": "pnpm docs:check && pnpm typecheck && pnpm docs:build",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter @appberry/berryeditor test:e2e",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@next/eslint-plugin-next": "^15.5.12",
    "@playwright/test": "^1.51.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.8",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.5.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Appberry-dev/BerryEditor.git"
  },
  "keywords": [],
  "author": "",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Appberry-dev/BerryEditor/issues"
  },
  "homepage": "https://github.com/Appberry-dev/BerryEditor#readme"
}
